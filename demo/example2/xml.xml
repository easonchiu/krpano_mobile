<krpano>
	
	<!--基础功能-->
	<include url="../src/base.xml" />

	

	<config name="config"
		gravity="true"
		vr="true"
		bgsound="./sound.mp3"
		bgsoundplay="false"
		y="10"
		entry="keting" />


	<sandmap name="sandmap"
		visible="false"
		bg="sandmap.png"
		width="201"
		height="180" />


	<scene name="shufang" title="书房" pointx="155" pointy="42" direction="90" thumburl="shufang/thumb.jpg">

		<hotspot style="hotspot"
			direction="left"
			ath="180"
			atv="0"
			link="keting"
			title="客厅" />

		<view hlookat="20" fovmin="60" fov="95" fovmax="120" />
		<preview url="shufang/preview.jpg" />
		<image>
			<cube url="shufang/mobile_%s.jpg" />
		</image>
	</scene>


	<scene name="keting" title="客厅" pointx="155" pointy="138" direction="-180" thumburl="keting/thumb.jpg">
		<view hlookat="90" fovmin="60" fov="95" fovmax="120" />
		<preview url="keting/preview.jpg" />
		<image>
			<cube url="keting/mobile_%s.jpg" />
		</image>
	</scene>

	

	<!--mall-->
	<include url="../src/plugins/mall.xml" />

	<mall>
		<tag name="t1" atscene="keting" atv="10" ath="240" product="p1|p2" />
		<tag name="t2" atscene="keting" atv="50" ath="90" product="p3|p4|p5" />
		<product name="p1"
			title="锌合金吊灯欧式卧室客厅灯玉石水晶灯1"
			thumb="products/1.jpg"
			price="4180"
			link="http://www.baidu.com"
			callback="showDetail(1)" />
		<product name="p2"
			title="锌合金吊灯欧式卧室客厅灯玉石水晶灯2"
			thumb="products/2.jpg"
			price="4180"
			link="http://www.baidu.com"
			callback="alert(2)" />
		<product name="p3"
			title="锌合金吊灯欧式卧室客厅灯玉石水晶灯3"
			thumb="products/3.jpg"
			price="4180"
			link="http://www.baidu.com"
			callback="showDetail(3)" />
		<product name="p4"
			title="锌合金吊灯欧式卧室客厅灯玉石水晶灯3"
			thumb="products/4.jpg"
			price="4180"
			link="http://www.baidu.com"
			callback="alert(4)" />
		<product name="p5"
			title="锌合金吊灯欧式卧室客厅灯玉石水晶灯3"
			thumb="products/5.jpg"
			price="4180"
			link="http://www.baidu.com"
			callback="alert(4)" />
	</mall>


</krpano>
